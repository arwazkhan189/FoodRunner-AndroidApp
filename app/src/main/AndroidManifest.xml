<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.arwazkhan.foodrunner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/foodrunner_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/foodrunner_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodRunner">
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ForgotPasswordDetailsActivity"
            android:exported="true"
            android:parentActivityName=".ForgotPasswordActivity" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="true"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".RegisterDetailsActivity"
            android:exported="true"
            android:parentActivityName=".RegistrationActivity" />
        <activity
            android:name=".RegistrationActivity"
            android:exported="true"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".HomeActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
    </application>

</manifest>